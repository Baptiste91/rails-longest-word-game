<div class="container">
  <div class="row justify-content-center">
    <div>
      <h1>New Game</h1>
    </div>

    <div>
      <ul class="inline" id="grid">
        <% @grid.each do |letter| %>
          <li><%= letter.capitalize %></li>
        <% end %>
      </ul>
    </div>

    <div>
      <h4>What is the longest word you can find ?</h4>
    </div>

    <div>
      <form action="/score">
        <input type="text" name="question" style="width:300px; height:25px; border:1px dotted grey; border-radius: 5px;">
        <input type="hidden" name="let" value="<%= @grid %>">
        <input class="btn" type="submit" value="Play">
      </form>
    </div>
  </div>
</div>
